{
    "name": "real-time-chess",
    "version": "0.0.2",
    "description": "A realtime chess application",
    "main": "dist/index.js",
    "module": "commonjs",
    "root": "./dist",
    "scripts": {
        "build": "node build.js",
        "build:server": "tsc",
        "build:client": "npm run build:scss ; npx webpack",
        "build:scss": "npx sass static/src/scss:static/public/css",
        "start": "ts-node src/main/index.ts",
        "clean": "source clean.zsh",
        "deploy": "source deploy.zsh",
        "rotate-logs": "cat server.log; rm server.log",
        "coverage": "NODE_ENV=test nyc --reporter=lcov --reporter=text-lcov --reporter=html mocha --timeout 10000 -r ts-node-test-register -r tsconfig-paths/register \"src/test/**/*.spec.ts\" --exit",
        "test": "NODE_ENV=test mocha --reporter spec -r ts-node-test-register -r tsconfig-paths/register \"src/test/**/*.spec.ts\" --exit",
        "uml": "npm run uml:server & npm run uml:client",
        "uml:server": "tplant -A -i src/main/index.ts -o README/server-uml.svg",
        "uml:client": "tplant -A -i static/src/ts/index.tsx -o README/client-uml.svg",
        "lint": "eslint .",
        "fix": "eslint . --fix",
        "cpd": "npx jscpd -r html ./static/src ./src/main -o ./cpd",
        "document": "npm run document:server & npm run document:client",
        "document:server": "typedoc --tsconfig ./tsconfig.json --entryPointStrategy expand ./src/main --out ./docs/server",
        "document:client": "typedoc --tsconfig ./static/src/ts/tsconfig.json --entryPointStrategy expand ./static/src/ts --out ./docs/client"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Capstone-Projects-2022-Spring/project-real-time-chess.git"
    },
    "author": "Group 4",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/Capstone-Projects-2022-Spring/project-real-time-chess/issues"
    },
    "homepage": "https://github.com/Capstone-Projects-2022-Spring/project-real-time-chess#readme",
    "dependencies": {
        "@ionic/react": "^6.0.13",
        "assert": "^2.0.0",
        "axios": "^0.25.0",
        "body-parser": "^1.19.1",
        "chess.js": "^0.12.1",
        "cookie": "^0.4.2",
        "cookie-parser": "^1.4.6",
        "eslint-config-airbnb-typescript": "^16.1.0",
        "express": "^4.17.2",
        "ionicons": "^6.0.1",
        "mongodb": "^4.4.0",
        "npx": "^3.0.0",
        "pug": "^3.0.2",
        "react": "^17.0.2",
        "react-chessboard": "^1.2.2",
        "react-dom": "^17.0.2",
        "socket.io": "^4.5.3",
        "socket.io-client": "^4.4.1",
        "sweetalert2": "^11.4.4",
        "toastify-js": "^1.11.2",
        "winston": "^3.6.0"
    },
    "devDependencies": {
        "@types/assert": "^1.5.6",
        "@types/axios": "^0.14.0",
        "@types/body-parser": "^1.19.2",
        "@types/chai": "^4.3.0",
        "@types/chess.js": "^0.11.2",
        "@types/chessboardjs": "^0.3.2",
        "@types/cookie": "^0.4.1",
        "@types/cookie-parser": "^1.4.2",
        "@types/express": "^4.17.13",
        "@types/mocha": "^9.1.0",
        "@types/node": "^17.0.21",
        "@types/pug": "^2.0.6",
        "@types/react": "^17.0.39",
        "@types/react-dom": "^17.0.11",
        "@types/socket.io": "^3.0.2",
        "@types/toastify-js": "^1.11.0",
        "@types/winston": "^2.4.4",
        "@typescript-eslint/eslint-plugin": "^5.12.1",
        "chai": "^4.3.6",
        "eslint": "^8.11.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-plugin-tsdoc": "^0.2.14",
        "jscpd": "^3.4.5",
        "mocha": "^9.2.1",
        "nyc": "^15.1.0",
        "prettier": "^2.5.1",
        "sass": "^1.49.9",
        "sinon": "^13.0.2",
        "source-map-loader": "^3.0.1",
        "tplant": "^3.1.0",
        "ts-loader": "^9.2.6",
        "ts-node-test-register": "^10.0.0",
        "tsconfig-paths": "^3.12.0",
        "typedoc": "^0.22.13",
        "typedoc-plugin-rename-defaults": "^0.4.0",
        "webpack": "^5.68.0",
        "webpack-cli": "^4.9.2"
    }
}
