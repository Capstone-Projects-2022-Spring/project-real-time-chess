{
    "include": ["./src", "src/types"],
    "exclude": ["./static", "node_modules", "dist"],
    "compilerOptions": {
        "target": "ES2017",
        "module": "commonjs",
        "lib": ["es6", "dom"],
        "allowJs": true,
        "checkJs": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "removeComments": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedIndexedAccess": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {},
        "typeRoots": ["src/types"],
        "types": ["mocha"],
        "sourceRoot": "./src",
        "mapRoot": "./dist",
        "composite": true,
        "allowSyntheticDefaultImports": true
    },
    "ts-node": {
        "files": true
    }
}
